# Dockerfile for running dot-work tests with memory limits
# This image runs tests in a container with a 4GB memory limit
# Use: docker build -f Dockerfile.test -t dot-work-test .
#      docker run --memory=4g dot-work-test

FROM python:3.13-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Set working directory
WORKDIR /app

# Copy project files
COPY pyproject.toml ./
COPY README.md ./
COPY src ./src

# Install dependencies using uv
RUN uv sync --all-extras

# Copy test files
COPY tests ./tests
COPY .gitignore ./

# Create directory for test logs
RUN mkdir -p /app/test_logs

# Default command runs all tests
CMD ["uv", "run", "pytest", "tests/", "-v", "--tb=short", "--strict-markers"]
